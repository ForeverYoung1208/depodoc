<p id="notice"><%= notice %></p>

<h1>Logs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Changed model</th>
      <th>Changed</th>
      <th>From value</th>
      <th>To value</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.user_id %></td>
        <td><%= log.changed_model %></td>
        <td><%= log.changed_id %></td>
        <td><%= log.from_value %></td>
        <td><%= log.to_value %></td>
        <td><%= log.note %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log', new_log_path %>
