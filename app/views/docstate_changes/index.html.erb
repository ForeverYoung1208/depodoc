<p id="notice"><%= notice %></p>

<h1>Docstate Changes</h1>

<table>
  <thead>
    <tr>
      <th>Document</th>
      <th>From state</th>
      <th>To state</th>
      <th>User references</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @docstate_changes.each do |docstate_change| %>
      <tr>
        <td><%= docstate_change.document_id %></td>
        <td><%= docstate_change.from_state_id %></td>
        <td><%= docstate_change.to_state_id %></td>
        <td><%= docstate_change.user.name %></td>
        <td><%= docstate_change.note %></td>
        <td><%= link_to 'Show', docstate_change %></td>
        <td><%= link_to 'Edit', edit_docstate_change_path(docstate_change) %></td>
        <td><%= link_to 'Destroy', docstate_change, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

